<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.hackademicshanoi.prj_model.View.MainActivity.MainActivity">

        <FrameLayout
            android:id="@+id/activity_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">
        </FrameLayout>
    <LinearLayout
        android:id="@+id/activity_tab_bar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#000"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <RelativeLayout
            android:id="@+id/activity_main_tab_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/activity_main_bt_tab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/tab_home" />

            <TextView
                android:id="@+id/activity_main_txt_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_main_bt_tab_home"
                android:gravity="center_horizontal|center_vertical"
                android:text="HOME"
                android:textColor="#fff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_main_tab_talk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/activity_main_bt_tab_talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/tab_talk" />

            <TextView
                android:id="@+id/activity_main_txt_talk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_main_bt_tab_talk"
                android:gravity="center_horizontal|center_vertical"
                android:text="TALK"
                android:textColor="#fff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_main_tab_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/activity_main_bt_tab_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/tab_setting" />

            <TextView
                android:id="@+id/activity_main_txt_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_main_bt_tab_setting"
                android:gravity="center_horizontal|center_vertical"
                android:text="SETTING"
                android:textColor="#fff" />
        </RelativeLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
